<div id="skills" class="bg-background w-full flex justify-center items-center p-6 md:p-16 pt-0 md:pt-0">
    <div class="w-full max-w-screen-xl flex justify-center items-center">
        <div class="flex flex-col justify-center items-center w-full gap-12">
            <div class="flex flex-col gap-2 w-full justify-center items-center">
                <h6 class="text-pink">Skills</h6>
                <h2 class="text-4xl text-white font-bold">What Can I Do?</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 w-full justify-between items-center">
                @foreach (var skill in Outputs.FromPipeline("Data").FilterSources("shared/Skills/*.yaml"))
                {
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <div class="flex justify-center items-center p-4 bg-[#18181a] border-2 border-[#27252e] rounded-lg hover:bg-purple-gradient transition-all duration-500">
                            <img src="@skill.GetPath("Icon")" />
                        </div>
                        <h3 class="text-white font-semibold text-xl">@skill.GetTitle()</h3>
                        <p class="text-white">
                            @skill.GetString("Description")
                        </p>
                    </div>
                }
            </div>
        </div>

    </div>
</div>